@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VPSA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/lib/fontawesome/css/all.min.css">

    <style>
        h5 {
            color: #2990CA;
        }

        .img-logo {
            max-height: 40px;
            margin-right: 15px
        }

        .navbar-brand {
            text-align: center;
            color: #2990CA;
        }

        .nav-link {
            color: #2990CA !important;
            font-size: large;
        }

        .btn-outline-custom-Find {
            color: #2990CA;
            background-color: white;
            border-color: #2990CA;
        }

        .btn-outline-custom-Find:hover {
                color: white;
                background-color: #2990CA;
        }

        .btn-outline-custom:hover {
            color: white;
            background-color: #2990CA;
        }
    </style>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-fixed-top navbar-light bg-light bg-white border-bottom shadow-sm">
            <a href="/Home">
                <img class="img-logo" src="data:image/svg+xml;base64,
      " />
            </a>
            <h5 class="my-0 font-weight-normal">Municipio</h5>
            <h5 class="my-0 mr-md-auto font-weight-bold">VPSA</h5>
            <div class="navbar-collapse collapse nav-content order-2">
                <ul class="nav navbar-nav" style="margin-left: 15%;">
                    <li class="nav-item">
                        <a class="nav-link" href="#">Ordenanzas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Novedades</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link dropdown-toggle"
                           href="#"
                           id="navbarDropdown"
                           role="button"
                           data-toggle="dropdown"
                           aria-haspopup="true"
                           aria-expanded="false">
                            Servicios
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown" style="margin-left: 500px">
                            <a class="dropdown-item" href="/Denuncias/Create">Denuncia</a>
                            <a class="dropdown-item" href="#">Solicitudes</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">Seguimiento de Reclamos</a>
                            <a class="dropdown-item" href="#">Seguimiento de Solicitudes</a>
                        </div>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Denuncias">Empleados</a>
                    </li>
                </ul>
            </div>
            <div class="ml-auto navbar-collapse collapse nav-content order-3 order-md-3">
                <ul class="ml-auto nav navbar-nav">
                    <li class="nav-item">
                        <form asp-action="View" asp-controller="Denuncias" class="form-inline my-2 my-lg-0">
                            <input class="form-control mr-sm-2"
                                   type="search"
                                   placeholder="Buscar Denuncia..."
                                   name="NroDenuncia"
                                   aria-label="Search" />
                            <button class="btn btn btn-outline-custom-Find my-2 my-sm-0" type="submit">
                                <i class="fa fa-search" aria-hidden="true"></i>
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
            <div class="navbar-collapse collapse nav-content order-4 order-md-4">
                @if (SignInManager.IsSignedIn(User))
                {
                    var UserFirstName = User.Claims.FirstOrDefault(x => x.Type == "firstname");
                    var UserLastName = User.Claims.FirstOrDefault(x => x.Type == "lastname");
                    if (UserFirstName != null || UserLastName != null)
                    {
                        <ul class="ml-auto nav navbar-nav">
                            <li class="nav-item">
                                <div class="form-inline">
                                    <i class="fas fa-user-circle" style="font-size: 30px;color: #2990CA;"></i>
                                    @(UserFirstName.Value+" "+ UserLastName.Value)
                                    <form class="form-inline" asp-controller="Account" asp-action="Logout">
                                        <button type="submit" class="btn btn-link text-info">Logout</button>
                                    </form>
                                </div>
                            </li>
                        </ul>
                    }

                }
            </div>
        </nav>
    </header>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer class="border-top footer py-2 bg-dark">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright &copy; VPSA 2020</p>
            @*&copy; 2020 - VPSAMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>*@
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
